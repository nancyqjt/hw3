<h1><%= @place["name"] %></h1>

<a href="/places"> Back to all the places I've been to </a>

<h3>Posts</h3>

<ul>
    <% for post in @posts %>
        <li><%= post["title"]%></li>
        <li><%= post["posted_on"]%></li>
        <li><%= post["description"]%></li>
    <% end %>
</ul>

<p>
    <a href="/posts/new?place_id=
    <%= @place["id"] %>">Creat a new post for
    <%= @place["name"] %></a>
</p>