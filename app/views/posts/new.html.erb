<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "Title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "Describe your experience" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "Date" %>
    <%= form.text_field "date" %>
  </p>
  <p>
    <%= form.hidden_field "place_id" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>